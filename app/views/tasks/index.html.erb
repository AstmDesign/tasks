<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>

<br>

<!--box-->
<div class="box">
  <!--box-header-->
  <div class="box-header">
    <h3 class="box-title">
      Tasks
      <small>( <%=pluralize(@tasks.count,'task')%> )</small>
    </h3>
  </div><!--box-header-->

  <!--box-body-->
  <div class="box-body no-padding">
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>User</th>
          <th>Task</th>
          <th>Project</th>
          <th>Priority</th>
          <th>Status</th>
          <th>Deadline</th>
          <th colspan="3"></th>
        </tr>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.user.full_name %></td>
            <td><%= task.title %></td>
            <td><%= task.project.name %></td>
            <td><%= task.priority %></td>
            <td><%= task.status %></td>
            <td><%= task.deadline %></td>
            <td>
              <% if can? :read, task %>
                <%= link_to 'Show', task %>
              <% end %>
            </td>
            <td>
              <% if can? :update, task %>
                <%= link_to 'Edit', edit_task_path(task) %>
              <% end %>
            </td>
            <td>
              <% if can? :destroy, task %>
                <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!--box-body-->
</div><!--box-->
